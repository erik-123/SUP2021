<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SUP2021.Views.AboutPage"
             xmlns:vm="clr-namespace:SUP2021.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
          <Color x:Key="Accent">Darkblue</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
           <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
      <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,40" Spacing="10" BackgroundColor="DarkBlue" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
                <Label Text="Welcome" FontSize="Title" TextColor="White"/>
                <Label Text="This is a new started appplication! log in now or registed a account to start your new journey" FontSize="16" Padding="0,0,0,0" TextColor="White"/>
                <Label Text="About the application" FontSize="Title" TextColor="White"/>
                 <Label Text="This is a new started appplication! log in now or registed a account to start your new journey" FontSize="16" Padding="0,0,0,0" TextColor="White"/>
                <Label Text="Our passion" FontSize="Title" TextColor="White"/>
                 <Label Text="This is a new started appplication! log in now or registed a account to start your new journey" FontSize="16" Padding="0,0,0,0" TextColor="White"/>
                <Label Text="About us" FontSize="Title" TextColor="White"/>
                <Label Text="This is a new started appplication! log in now or registed a account to start your new journey" FontSize="16" Padding="0,0,0,0" TextColor="White"/>
                 <Label Text="Contact us" FontSize="Title" TextColor="White"/>
                 <Label Text="This is a new started appplication! log in now or registed a account to start your new journey" FontSize="16" Padding="0,0,0,0" TextColor="White"/>
                <Label FontSize="16" Padding="0,24,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <!--<Span Text="Learn more at "/>
                                <Span Text="https://aka.ms/xamarin-quickstart" FontAttributes="Bold"/>-->
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
               <!-- <Button Margin="0,10,0,0" Text="Entry"
                        Command="{Binding entryCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />-->
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
